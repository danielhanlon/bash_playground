#/bin/bash
INPUT="The quick brown:fox jumps\nover:the lazy dog"

echo "---------------------------"
echo "$INPUT"
echo "---------------------------"

echo "---------------------------"
echo "Array split as...:"
echo "---------------------------"
IFS='\n' read -ra ARRAY_OF_LINES <<< "$INPUT"
for i in "${ARRAY_OF_LINES[@]}"; do
  echo "New line......................."
  IFS=':' read -ra ARRAY <<< "$ARRAY_OF_LINES"
  for j in "${ARRAY[@]}"; do
    echo $i ;
  done
done
